
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/loginbackground">



    <ImageView
        android:id="@+id/FragmentlogoImageView"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginStart="118dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/FragmentlogoImageView"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/refLL1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.12"
                android:src="@drawable/accountwhite" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                app:backgroundTint="@color/textColor01"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextNameRegisterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:hint="Full Name"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColorLink="@android:color/white"
                    android:textCursorDrawable="@null"
                    app:backgroundTint="@color/cardview_light_background" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/refLL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refLL1"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.12"
                android:src="@drawable/emailiconregister" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                app:backgroundTint="@color/textColor01"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextEmailRegisterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColorLink="@android:color/white"
                    android:textCursorDrawable="@null"
                    app:backgroundTint="@color/cardview_light_background" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/refLL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refLL2"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.12"
                android:src="@drawable/lockiconregister" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                app:backgroundTint="@color/textColor01"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout"
                app:passwordToggleTint="@color/white"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextCreatePasswordRegisterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColorLink="@android:color/white"
                    android:textCursorDrawable="@null"
                    app:backgroundTint="@color/cardview_light_background" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/refLL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refLL3"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.12"
                android:src="@drawable/phone" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                app:backgroundTint="@color/textColor01"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextmobileNumRegisterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColorLink="@android:color/white"
                    android:textCursorDrawable="@null"
                    app:backgroundTint="@color/cardview_light_background" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/refLL5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:layout_below="@+id/refLL4"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:src="@drawable/homewhite" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                app:backgroundTint="@color/textColor01"
                app:hintTextAppearance="@style/Widget.Design.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editTextPincodeRegisterFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:textColor="@color/cardview_light_background"
                    android:textColorHint="@color/cardview_light_background"
                    android:textColorLink="@android:color/white"
                    android:textCursorDrawable="@null"
                    app:backgroundTint="@color/cardview_light_background" />
            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0.25"
                android:src="@drawable/schoolwhiteregister" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerRegisterFragment"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.89"
                app:backgroundTint="@color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonRegisterRegisterFragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:paddingStart="5dp"
            android:text="Join MathonGo"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:layout_below="@+id/refLL5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Already have an account?"
            android:textAlignment="textEnd"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/RegisterLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@android:color/transparent"
            android:paddingStart="5dp"
            android:text="Log in"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>