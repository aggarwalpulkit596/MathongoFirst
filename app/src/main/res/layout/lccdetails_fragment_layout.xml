<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.10"
            android:text="Course Details"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/lccdetails_courseDetails"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:padding="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/lccdetails_courseDetails_classTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Class"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_classValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_languageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Medium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_languageValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_durationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_durationValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/lccdetails_courseDetails_difficultyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Difficulty"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_difficultyValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_relevanceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Relevance"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lccdetails_courseDetails_relevanceValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.10"
            android:layout_marginTop="5dp"
            android:text="Teacher"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:id="@+id/lccdetails_teacherInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            app:cardElevation="4dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="15dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lccdetails_teacherInfo_teachersCircleImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/teachersicon" />

                <TextView
                    android:id="@+id/lccdetails_teacherInfo_teachersNameTextView"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/lccdetails_teacherInfo_teachersDescription"
                    android:layout_toEndOf="@+id/lccdetails_teacherInfo_teachersCircleImageView"
                    android:gravity="center_vertical"
                    android:text="John Doe"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold" />
