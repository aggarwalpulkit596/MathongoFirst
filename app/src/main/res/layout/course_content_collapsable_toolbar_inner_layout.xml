    <RatingBar
        android:id="@+id/LibraryCourseItemRatingbar"
        style="@style/RatingBarCustom"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/LibraryCourseItemTitle"
        android:layout_below="@+id/LibraryCourseItemTitle"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:progressTint="@color/Ratingbar"
        android:rating="3.5"
        android:stepSize="0.5" />

