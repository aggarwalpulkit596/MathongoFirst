<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:elevation="15dp"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">


        <ImageView
            android:id="@+id/lcclectures_item_clapperBoard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/movie" />


        <RelativeLayout
            android:id="@+id/llayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/lcclectures_item_clapperBoard">

            <TextView
                android:id="@+id/lcclectures_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lcclectures_item_titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lcclectures_item_number"
                android:layout_toRightOf="@+id/lcclectures_item_number"
                android:maxWidth="200dp"
                android:text="lkfjlkdjlkdsjflksfj laksdjflksdfjlkdsj laskdjflksd "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lcclectures_item_DurartionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lcclectures_item_titleTextView"
                android:layout_below="@+id/lcclectures_item_titleTextView"
                android:text="3 min" />


        </RelativeLayout>
        <!--       <TextView
            android:id="@+id/lcclectures_item_ModifyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lcclectures_item_titleTextView"
            android:layout_alignBottom="@+id/lcclectures_item_titleTextView"
            android:layout_toEndOf="@+id/lcclectures_item_titleTextView"
            android:background="?android:attr/colorPressedHighlight"
            android:gravity="center_vertical|center"
            android:padding="4dp"
            android:text="UPDATED"
            android:textColor="@color/cardview_light_background" />-->

        <ImageButton
            android:id="@+id/lcclectures_item_playButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/playbutton" />

    </RelativeLayout>
</android.support.v7.widget.CardView>