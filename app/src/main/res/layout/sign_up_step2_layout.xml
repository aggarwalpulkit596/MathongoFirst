<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@drawable/newbackgroundbase"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/completeProfileTextView"
            android:textStyle="bold"
            android:textColor="#141f31"
            android:lineSpacingExtra="10sp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="Complete Your Profile" />



        <ImageView
            android:id="@+id/FragmentlogoImageView"
            android:layout_width="172dp"
            android:layout_height="112dp"
            android:src="@drawable/happyemoji"
            android:layout_below="@+id/completeProfileTextView"
            android:layout_marginStart="118dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_below="@id/FragmentlogoImageView"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/refLL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="0.12"
                    app:srcCompat="@drawable/new_user" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/navyBlue"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextNameRegisterFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:hint="Full Name"
                        android:maxLength="30"
                        android:inputType="textPersonName"
                        android:textColor="#141f31"
                        android:textColorHint="@color/newGray"
                        android:textColorLink="@color/newGray"
                        android:textCursorDrawable="@null"
                        app:backgroundTint="@color/newGray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/refLL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refLL1"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.12"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/new_email_va" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/navyBlue"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextEmailRegisterFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:textColor="#141f31"
                        android:textColorHint="@color/newGray"
                        android:textColorLink="@color/newGray"
                        android:textCursorDrawable="@null"
                        app:backgroundTint="@color/newGray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/refLL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refLL2"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.12"
                    app:srcCompat="@drawable/lock_new_va" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/navyBlue"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/newGray">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextCreatePasswordRegisterFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:hint="Password"
                        android:inputType="textVisiblePassword"
                        android:textColor="#141f31"
                        android:textColorHint="@color/newGray"
                        android:textColorLink="@color/newGray"
                        android:textCursorDrawable="@null"
                        app:backgroundTint="@color/newGray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/refLL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refLL3"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.12"
                    app:srcCompat="@drawable/new_pincode_va" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textColor="#141f31"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint">

                    <android.support.design.widget.TextInputEditText
