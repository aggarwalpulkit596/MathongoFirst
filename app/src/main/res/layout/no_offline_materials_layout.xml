<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_Offline_Materials_RelativeLayout"
    android:visibility="gone"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="172dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/noOfflineMaterialImageview"
        android:src="@drawable/no_offline_materials"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noOfflineMaterialImageview"
        android:text="No Offline Materials"
        android:layout_centerInParent="true"/>

</RelativeLayout>