<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/newbackgroundbase"

    android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forgot_password_update_FragmentlogoImageView"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_marginTop="42dp"
                android:src="@drawable/logotwo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <LinearLayout
                android:id="@+id/refLL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/forgot_password_update_FragmentlogoImageView"
                android:paddingStart="15dp"
                android:paddingTop="10dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/navyBlue"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/newGray">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextCreatePasswordRegisterFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:hint="Create New Password"
                        android:inputType="textVisiblePassword"
                        android:textColor="#141f31"
                        android:textColorHint="@color/newGray"
                        android:textColorLink="@color/newGray"
                        android:textCursorDrawable="@null"
                        app:backgroundTint="@color/newGray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/refLL4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/refLL3"
                android:paddingStart="15dp"
                android:paddingTop="10dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/navyBlue"
                    android:textColorHint="@color/newGray"
                    app:backgroundTint="@color/newGray"
                    app:hintTextAppearance="@style/CustomDesignHint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/newGray">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextConfirmPasswordRegisterFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:hint="Re-enter Password"
                        android:inputType="textVisiblePassword"
                        android:textColor="#141f31"
                        android:textColorHint="@color/newGray"
                        android:textColorLink="@color/newGray"
                        android:textCursorDrawable="@null"
                        app:backgroundTint="@color/newGray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <Button
                android:id="@+id/password_save_Button_Fragment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/new_login_button"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textStyle="bold"
                android:layout_below="@+id/refLL4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/progressbar_layout"/>


</RelativeLayout>
