<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lecturePlayerLectureItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_textview"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:layout_marginTop="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lecturePlayerLectureItemTitleTextView"
            android:text="Introduction"
            android:layout_toRightOf="@+id/lecturePlayerLectureItemTextView"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorGray" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle">
            <com.taishi.library.Indicator
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="20dp"
                app:bar_num="5"
                app:bar_color="#ff4bca81"
                app:step_num="20"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>