<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/courseLayout"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/courseImageView"
           android:src="@mipmap/ic_launcher"/>


           <com.eralp.circleprogressview.CircleProgressView
               android:id="@+id/circle_view_progress"
               android:layout_width="75dp"
               android:layout_height="75dp"
               android:layout_gravity="center"
               app:cpv_circle_color="#27375c"
               app:cpv_circle_width="6dp"
               app:cpv_background_circle_width="1dp"
               app:cpv_background_circle_color="#5b253048"
               app:cpv_text_suffix="%"
               app:cpv_text_size="20"
               app:cpv_text_color="#27375c"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+"
               android:id="@+id/Pprogress"/>


           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="-"
               android:id="@+id/Nprogress"/>

       </LinearLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:id="@+id/linearProgress"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />

    </LinearLayout>
</android.support.v7.widget.CardView>