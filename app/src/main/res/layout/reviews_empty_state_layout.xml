<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/empty_reviews_state_imageView"
        android:src="@drawable/reviewsempty"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll to Review"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_blue"
        android:id="@+id/empty_reviews_state_rateandreview_button"
        android:layout_below="@+id/empty_reviews_state_imageView"
        android:layout_alignEnd="@+id/empty_reviews_state_imageView"
        android:layout_alignStart="@+id/empty_reviews_state_imageView" />

</RelativeLayout>