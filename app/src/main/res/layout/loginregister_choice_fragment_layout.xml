<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackgroundbase">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/splashImageView"
            android:layout_width="274dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/logotwo" />

        <TextView
            android:id="@+id/taglineTextView_LoginRegisterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpButton_LoginRegisterFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="80dp"
            android:text="Making Quality Education Affordable To All."
            android:textAlignment="center"
            android:textColor="@color/newGray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/loginButton_LoginRegisterFragment"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/splashImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="147dp"
            android:background="@drawable/new_login_button"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signUpButton_LoginRegisterFragment"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/loginButton_LoginRegisterFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/new_sign_uo"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold" />


    </RelativeLayout>

</ScrollView>