<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.TabLayout
        android:id="@+id/questionBankFragment_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundBlue"
        app:tabIndicatorColor="@android:color/background_light"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextAppearance="@style/MyCustomText"
        app:tabTextColor="@color/navbarstudentColor" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_below="@+id/questionBankFragment_TabLayout"
        android:id="@+id/questionBank_Fragment_ViewPager"
        android:layout_height="match_parent"/>​​


</RelativeLayout>