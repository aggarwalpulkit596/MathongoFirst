<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp">


            <TextView
                android:id="@+id/lccmaterials_recyclerview_item_numberingTextView_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/lccmaterials_recyclerview_item_IconImageView_layout"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lccmaterials_recyclerview_item_titleTextView_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/lccmaterials_recyclerview_item_IconImageView_layout"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/lccmaterials_recyclerview_item_numberingTextView_layout"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pdficon"
                android:id="@+id/lccmaterials_recyclerview_item_IconImageView_layout" />

            <ImageButton
                android:id="@+id/lccmaterials_recyclerview_item_downloadImageView_layout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/float_transparent"
                android:src="@drawable/downloadcircle" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>