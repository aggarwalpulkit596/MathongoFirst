<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/newbackgroundbase"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textColor="#141f31"
        android:lineSpacingExtra="10sp"
        android:id="@+id/academicDetailsTextView"
        android:text="Your Academic Details"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#6885a5"
        android:id="@+id/examTextView"
        android:layout_below="@+id/academicDetailsTextView"
        android:layout_marginStart="12dp"
        android:layout_marginTop="37dp"
        android:lineSpacingExtra="11sp"
        android:text="What is your target year?"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayoutTargetYear"
        android:layout_below="@+id/examTextView"
        android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp"
                android:id="@+id/sign_up_step3_targetYear2018_CardView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:background="@color/white"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:id="@+id/targetY2018TextView"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:layout_margin="2dp"
                    android:lineSpacingExtra="8sp"
                    android:text="2018"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="4dp"
                android:id="@+id/sign_up_step3_targetYear2019_CardView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="30dp"
                    android:background="@color/white"
                    android:paddingStart="30dp"
                    android:id="@+id/targetY2019TextView"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:layout_margin="2dp"
                    android:lineSpacingExtra="8sp"
                    android:text="2019"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardElevation="4dp"
                android:id="@+id/sign_up_step3_targetYear2020_CardView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="30dp"
                    android:id="@+id/targetY2020TextView"
                    android:paddingStart="30dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:layout_margin="2dp"
                    android:lineSpacingExtra="8sp"
                    android:text="2020"
                    />
            </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/preparingTextView"
        android:layout_below="@id/linearLayoutTargetYear"
        android:layout_marginTop="42dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:layout_marginStart="12dp"
        android:textColor="#6885a5"
        android:lineSpacingExtra="11sp"
        android:text="How are you preparing?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preparingTextView"
        android:id="@+id/modeOfStudyLL"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:id="@+id/sign_up_step3_mode_selfStudy_CardView">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:paddingEnd="32dp"
                android:layout_margin="2dp"
                android:paddingStart="32dp"
                android:background="@color/white"
                android:id="@+id/selfStudyMode_TextView"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#6885a5"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="Self Study"
                />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:id="@+id/sign_up_step3_mode_coaching_CardView">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="18dp"
                android:gravity="center"
                android:paddingTop="18dp"
                android:id="@+id/coaching_TextView"
                android:paddingEnd="32dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:paddingStart="32dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#6885a5"
                android:lineSpacingExtra="8sp"
                android:text="Coaching"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>



    <Button
        android:id="@+id/signUp_step3_submitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/new_login_button"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_below="@+id/modeOfStudyLL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />



</RelativeLayout>

</ScrollView>

    <include layout="@layout/progressbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


</RelativeLayout>