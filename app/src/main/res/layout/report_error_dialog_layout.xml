<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/backgroundBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="0dp"
        android:paddingStart="5dp"
        android:gravity="center_vertical"
        android:text="Report A Bug"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editTextReportErrorDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        app:backgroundTint="@color/white"
        android:gravity="top"
        android:hint="Tell us about your issue."
        android:inputType="textMultiLine|textLongMessage"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@android:color/transparent" />

    <Button
        android:id="@+id/submitButtonReportErrorDialog"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:layout_below="@+id/editTextReportErrorDialog"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:id="@+id/imageButtonReportErrorDialog"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/closeicon" />



</RelativeLayout>