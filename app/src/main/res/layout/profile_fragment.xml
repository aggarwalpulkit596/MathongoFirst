<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/profileImage"
            android:layout_below="@+id/profileEditButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_menu_edit"
            android:id="@+id/profileEditButton"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="150dp"
            android:id="@+id/profileNameTextView"
            android:layout_below="@+id/profileImage"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center_horizontal"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/profileIdentity"
            android:text="Student"
            android:gravity="center_horizontal"
            android:layout_below="@+id/profileNameTextView"
            android:layout_centerHorizontal="true"/>

        <View
            style="@style/Divider"
            android:layout_below="@+id/profileIdentity"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profileFollowersTextView"
            android:text="Followers"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profileFollowersNumTextView"
            android:text="25"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profileFollowingTextView"
            android:text="Following"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15"
            android:id="@+id/profileFollowingNumTextView"/>


    </LinearLayout>




</LinearLayout>