<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/newbackgroundbase"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:textColor="#141f31"
            android:lineSpacingExtra="10sp"
            android:id="@+id/academicDetailsTextView"
            android:text="Your Academic Details"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#6885a5"
            android:id="@+id/examTextView"
            android:layout_below="@+id/academicDetailsTextView"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="11sp"
            android:text="Which exam you want to crack?"
            />

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:cardElevation="4dp"
                android:layout_below="@+id/examTextView"
                android:id="@+id/jeeMainsCardView_signUp_step2b">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="22dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="#6885a5"
                        android:id="@+id/jeeMainsTextView"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="26dp"
                        android:lineSpacingExtra="8sp"
                        android:layout_centerVertical="true"
                        android:text="JEE Main"
                        />

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/jee"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:cardElevation="4dp"
            android:layout_below="@+id/jeeMainsCardView_signUp_step2b"
            android:id="@+id/jeeAdvanceCardView_signUp_step2b">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="22dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:id="@+id/jeeAdvanceTextView"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:text="JEE Advance"
                    />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/jee"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:cardElevation="4dp"
            android:layout_below="@+id/jeeAdvanceCardView_signUp_step2b"
            android:id="@+id/bitsatCardView_signUp_step2b">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="22dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:id="@+id/bitsatTextView"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:text="BITSAT"
                    />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/jee"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:cardElevation="4dp"
            android:layout_below="@+id/bitsatCardView_signUp_step2b"
            android:id="@+id/boardExams_signUp_step2b">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="22dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:id="@+id/boardsTextView"
                    android:textColor="#6885a5"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:text="Board Exams"
                    />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/cbse"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:cardElevation="4dp"
            android:layout_below="@+id/boardExams_signUp_step2b"
            android:id="@+id/otherExams_signUp_step2b">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="22dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="#6885a5"
                    android:id="@+id/otherTextView"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:lineSpacingExtra="8sp"
                    android:layout_centerVertical="true"
                    android:text="Other Exams"
                    />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <Button
            android:id="@+id/signUp_step2b_submitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/new_login_button"
            android:text="Continue"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:layout_below="@+id/otherExams_signUp_step2b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />




    </RelativeLayout>

</ScrollView>